{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "rootDir": "..",
    "outDir": "dist",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": false
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "**/__tests__/**", "**/*.test.tsx", "**/*.spec.tsx"]
}
